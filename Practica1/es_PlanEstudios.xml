    <form id="mostrar_asignaturas">
        <prompt>
            Las asignaturas del grado de <value expr="grado"/> del <value expr="curso"/> del <value expr="cuatrimestre"/> son:
        </prompt>
        <if grado ='ingenieria informatica'>
            <block>
                <!-- Filtra las asignaturas según las selecciones del usuario. -->
                <foreach item="asignatura" array="asignaturas_informatica">
                    <if cond="(asignatura.mención == mencion and asignatura.curso == curso and asignatura.cuatrimestre == cuatrimestre)">
                        <prompt>
                            Asignatura: <value expr="asignatura.nombre"/>
                        </prompt>
                    </if>
                </foreach>
            </block>
            <goto next="#volver_a_empezar"/>
        </if>
    </form>



    <form id="volver_a_empezar">
        <field name="volver_a_empezar_field" type="boolean">
            <prompt>
                ¿Desea consultar otro plan de estudios? Responda "sí" o "no".
            </prompt>
            <!--<grammar src="builtin:yesno/yesno.grxml"/>-->
            <filled>
                <if cond="volver_a_empezar_field">
                <!-- Si el usuario responde "sí", reiniciar la consulta -->
                    <prompt>De acuerdo, volvamos al principio.</prompt>
                    <clear namelist="plan_estudios"/>
                    <clear namelist="volver_a_empezar"/>
                    <goto next="#plan_estudios"/>
                <else/>
                <!-- Si el usuario responde "no", finalizar la interacción -->
                    <prompt>De acuerdo. ¡Que tenga un buen día!</prompt>
                    <exit/>
                </if>
            </filled>
        </field>
    </form>


